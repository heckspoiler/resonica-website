{
  "format": "page",
  "id": "date",
  "label": "date",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "date_type": {
        "type": "StructuredText",
        "config": {
          "label": "Date/Event Type",
          "placeholder": "Club, Festival, Release",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "hero_image": {
        "type": "Image",
        "config": {
          "label": "Event Hero Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "date_acts": {
        "type": "Group",
        "config": {
          "label": "Event Acts",
          "repeat": true,
          "fields": {
            "date_act": {
              "type": "Link",
              "config": {
                "label": "Act",
                "placeholder": "Name of Act & Link to SC in Linkfield",
                "allowTargetBlank": true,
                "select": null,
                "allowText": true
              }
            }
          }
        }
      },
      "ticket_link": {
        "type": "Link",
        "config": {
          "label": "Ticket Link",
          "placeholder": "TICKET or GET TICKETS or whatever you want",
          "allowTargetBlank": true,
          "select": null,
          "allowText": true
        }
      },
      "date_title": {
        "type": "StructuredText",
        "config": {
          "label": "Event Title",
          "placeholder": "Resonica at Zukunft",
          "allowTargetBlank": true,
          "multi": "heading2"
        }
      },
      "date_time": {
        "type": "StructuredText",
        "config": {
          "label": "Event Time",
          "placeholder": "23:59 - 06.00",
          "allowTargetBlank": true,
          "multi": "heading4"
        }
      },
      "event_start_date": {
        "type": "StructuredText",
        "config": {
          "label": "Event Start Date",
          "placeholder": "12.02.2025",
          "allowTargetBlank": true,
          "multi": "heading3"
        }
      },
      "event_description": {
        "type": "Text",
        "config": {
          "label": "Event Description",
          "placeholder": "Max. 750 characters"
        }
      },
      "event_end_date": {
        "type": "StructuredText",
        "config": {
          "label": "Event End Date",
          "placeholder": "Only if Festival or two dates are needed",
          "allowTargetBlank": true,
          "multi": "heading3"
        }
      },
      "date_index": {
        "type": "Text",
        "config": {
          "label": "Date Index",
          "placeholder": "IMPORTANT FOR THE SORTING!"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
